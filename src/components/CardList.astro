---
import Card from "./Card.astro";

const {cardListItems} = Astro.props;

---

<ul class="cardList">
  {
    cardListItems.map(card => (
        <Card title={card.title} pubDate={card.pubDate} imageUrl={card.imageUrl} description={card.description} readMoreLink={card.readMoreLink} />
    ))
  }
</ul>

<style>
  .cardList {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    grid-gap: 1rem 1rem;
    padding: 0;
  }

  
</style>
